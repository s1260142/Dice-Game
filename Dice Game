#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main(){
  int a,b;
  srand((unsigned int)time(NULL));
  a=rand()%6+1;
  b=rand()%6+1;
  printf("Rolling the dice...\n");
  printf("Value: %d\n",a);
  printf("Value: %d\n",b);
  printf("Total Value: %d\n",a+b);
   if(a+b>7){
  printf("You won\n");
 }
  else{
  printf("You lost\n");
 }
 
 return 0;
}
